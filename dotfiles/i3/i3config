# Scratchpad
# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Move current workspace to the next output (functionally toggles with only two outputs)
bindsym $mod+q move workspace to output right
bindsym $mod+Shift+q move workspace to output down



# Lock screen config
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.dotfiles/bin/i3exit lock, mode "default"
    bindsym e exec --no-startup-id ~/.dotfiles/bin/i3exit logout, mode "default"
    bindsym s exec --no-startup-id ~/.dotfiles/bin/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id ~/.dotfiles/bin/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.dotfiles/bin/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id $HOME/.dotfiles/bin/i3exit shutdown, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Pause mode "default"
}
bindsym $mod+Pause mode "$mode_system"
bindsym $mod+Insert mode "$mode_system"


# hardware buttons functionality; requries xbacklight and pact1
bindsym XF86MonBrightnessUp exec /usr/bin/xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 5

bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -- '-5%'
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 -- '+5%'
 


# vim like marks
bindsym $mod+m exec i3-input -F 'mark %s' -P 'Mark name: '
bindsym $mod+Shift+m exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '
